<view class="whole">
  <view class="cograph">
    <swiper class='u-wrp-bnr' indicator-dots='true' autoplay='true' interval='3000' duration='1000' circular='true'>
      <block wx:for="{{bnrUrl}}" wx:key="{{item.id}}">
        <swiper-item>
          <image src='{{item.url}}' class='u-img-slide' mode='aspectFill' />
        </swiper-item>
      </block>
    </swiper>
  </view>
  <!-- 热门需求 -->
  <view class="centerNav">
    <view>热门需求</view>
    <!-- 导航部分 -->
    <view class="section">
      <view class="Shape" wx:for='{{navlist}}' data-name='{{item.character}}' data-id='{{item.id}}' wx:key="{{item.id}}">
        <view class="logo">
          <image src="{{item.image}}"></image>
        </view>
        <view class="cter">{{item.character}}</view>
      </view>
    </view>
    <!-- 帮助部分 -->
    <view class="footer">
      <view class="xiu" wx:for='{{helplist}}' data-name='{{item.name}}' data-id='{{item.id}}' wx:key="{{item.id}}">
        <!-- 左侧图片部分 -->
        <view class="footer-img">
          <image src="{{item.image}}"></image>
        </view>
        <!-- 右侧文字部分 -->
        <view class="footer-right">
          <text class="right-top">{{item.name}}</text>
          <text class="right-bot">{{item.character}}</text>
        </view>
      </view>
    </view>
  </view>
  <!-- 底部 -->
  <view class="bottom">
    <text class="xin">西安鑫百发网络科技有限公司</text>
    <view class="ne">
      <text class="left1">联系电话：</text>
      <text class="right1">110 110 100</text>
    </view>
    <view class="ne">
      <text class="left1">地址： </text>
      <text class="right1">西安市碑林区长安大街3号A座2307</text>
    </view>
    <map id="map" latitude="{{latitude}}" longitude="{{longitude}}" markers="{{markers}}"
 scale="18" style="width: 100%; height: 350rpx;">
 </map>
  </view>
</view>