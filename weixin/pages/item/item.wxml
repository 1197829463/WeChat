<view class="serve" wx:for="{{ serveList }}" wx:for-item="list" wx:key="id">
  <!-- 轮播图 -->
  <view class="banner">
    <swiper class="bannerswipers" autoplay="{{ autoplay }}" bindanimationfinish="animationChange" bindchange="swiperChange" circular="true">
      <block wx:for="{{ list.imgs }}" wx:key="{{ index }}">
        <swiper-item>
          <image src="{{ item.url }}"></image>
        </swiper-item>
      </block>
    </swiper>
    <!-- 小圆点 -->
    <view class="bannerdots flex alignC flexC">
      <block wx:for="{{ list.imgs }}" wx:fot-item="{{ item }}" wx:key="{{ index }}">
        <view class="bannerdot{{ index == currentSwiper ? ' banneractive' : '' }}"></view>
      </block>
    </view>
  </view>
  <view class="shop-msg">
    <text class="shop-title">{{ list.shopTitle }}</text>
    <view class="num">
      <view class="price" wx:if="{{ list.unit == undefined }}">￥{{ list.price }}</view>
      <view class="price" wx:else>￥{{ list.price }}/{{ list.unit }}</view>
      <view class="save">手机省{{ list.save }}</view>
      <button open-type="share">
        <text class="iconfont icon-fenxiang-1"></text>
      </button>
    </view>
  </view>
  <view wx:if="{{ list.security == undefined }}"></view>
  <view class="center" wx:else>
    <text class="center-title">保障</text>
    <view wx:for="{{ list.security }}" wx:for-item="list" wx:key="id">
      <image src="../../images/right.png" class="center-icon" />
      <text class="center-cont">{{ list.cont }}</text>
    </view>
  </view>
