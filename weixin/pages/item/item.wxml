  <view class="comment" wx:for="{{ list.ratings }}" wx:for-item="item" wx:key="id">
    <view class="comment-title">
      <view>
        客户评价
        <text class="comment-num">({{ item.count }}条)</text>
      </view>
    </view>
    <!-- <view class="comment-classify">
      <view class="classify-cont" wx:for="{{ item.classify }}" wx:for-item="list" wx:key="id">
        {{ list.cont }} ({{ list.num }})
      </view>
    </view> -->
    <view class="comment-list" wx:for="{{ item.commentList }}" wx:for-item="list" wx:key="id">
      <view class="comment-msg">
        <image src="{{ list.msgSrc }}" class="msg-img" />
        <text class="msg-title">{{ list.msgTitle }}</text>
        <view class="stars" wx:if="{{ list.score != 0}}">
          <block wx:for="{{ [1,2,3,4,5] }}" wx:for-item="item" wx:key="{{ index }}">
            <image wx:if="{{ list.score >= index + 1 }}" src="../../images/score2.png" class="score" />
            <image wx:elif="{{ list.score > index && list.score * 10 % 10 >= 5 }}" src="../../images/score3.png" class="score" />
            <image wx:else src="../../images/score1.png" class="score" />
          </block>
        </view>
      </view>
      <text class="msg-text">{{ list.msgText }}</text>
    </view>
  </view>
  <view class="servelist">
    <view class="comment-title">
      <view>服务详情</view>
    </view>
    <image wx:for="{{ list.detailsImg }}" wx:for-item="item" wx:key="{{ index }}" src="{{ item }}" bindtap="imgPvw" data-src="{{ item }}" mode="widthFix" />
  </view>
  <view class="buy">
    <!-- <view class="buy-left">
      <image src="../../images/shop.png" />
      店铺
    </view> -->
    <view class="modals modals-bottom-dialog" hidden="{{hideModal}}">
      <view class="modals-cancel" bindtap="hideModal"></view>
      <view class="bottom-dialog-body bottom-pos" animation="{{animationData}}">
        <view class="pos-meg">
          <image src="../../images/2.jpg" class="port" />
          <view class="meg-right">
            <view class="meg-title">{{ list.shopTitle }}</view>
            <view class="meg-price">
              订单金额:
              <text class="price-num">￥{{ list.price }}</text>
            </view>
          </view>
        </view>
        <view class="flow-title">交易流程</view>
        <view class="flow">
          <view class="flow-list">
            <image src="../../images/flow-1.jpg" />
            <text>在线下单</text>
          </view>
          <text class="iconfont icon-jiantou-you flow-icon"></text>
          <view class="flow-list">
            <image src="../../images/flow-2.jpg" />
            <text>沟通需求</text>
          </view>
          <text class="iconfont icon-jiantou-you flow-icon"></text>
          <!-- <view class="flow-list">
            <image src="../../images/flow-3.jpg" />
            <text>金额托管开始工作</text>
          </view>
          <text class="iconfont icon-jiantou-you flow-icon"></text> -->
          <view class="flow-list">
            <image src="../../images/flow-4.jpg" />
            <text>验收工作确认付款</text>
          </view>
        </view>
        <view class="order-btn" bindtap="confirm">{{ order }}</view>
      </view>
    </view>
    <view class="buy-btn" bindtap="showModal">购买服务</view>
  </view>
</view>